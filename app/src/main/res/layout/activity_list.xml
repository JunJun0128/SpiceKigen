<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lifeistech.android.schoolseventeen.junjun.spicekigen.ListActivity"
    android:background="#ffffff">

    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="16dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:src="@drawable/add_black_icon"-->
        <!--android:backgroundTint="#03A9F4"-->
        <!--android:borderWidth="0dp"-->
        <!--android:id="@+id/fab" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="8"
        android:layout_marginLeft="5dp">

        <TextView
            android:text="Long Push to Delete"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/textView"
            android:textSize="25sp"
            android:textColor="@color/common_google_signin_btn_text_light_pressed" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ListView
                android:layout_width="319dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/list"
                android:choiceMode="multipleChoice" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:weightSum="12">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/add"
                    android:onClick="add"
                    android:layout_margin="5dp"
                    android:layout_weight="4"
                    app:backgroundTint="?attr/actionMenuTextColor" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/scan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/scan"
                    android:onClick="scan"
                    android:layout_margin="5dp"
                    android:layout_weight="4"
                    app:backgroundTint="?attr/actionMenuTextColor" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/mainmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/home"
                    android:onClick="mainmenu"
                    android:layout_margin="5dp"
                    android:layout_weight="4"
                    app:backgroundTint="?attr/actionMenuTextColor" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
